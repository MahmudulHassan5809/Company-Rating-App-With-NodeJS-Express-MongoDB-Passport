<% layout('layout') %>

<div class="container">
    <br><br>
    <div class="text-center reg_msg">
        <h1><a href="/">RateMe</a></h1>
    </div>
   <br><br>




   <div class="text-center reg_msg">
        <h2 class="fancy"><span>SIGN UP</span></h2>
   </div><br>

    <div class="row">

    <div class="col-md-8 mx-auto">
        <% include ../partials/message %>
        <% include ../partials/validationMessages %>

      <a href="/auth/google" class="btn btn-block btn-social btn-google mb-4 text-center">
          <i class="fab fa-google"></i>
          Sign in with Google
      </a>

      <form method="POST" class="" id="signupForm" action="/users/signup">

        <div class="form-group">
          <input type="text" name="fullname" id="fullname" placeholder="FullName" value="<% if (data != undefined) { -%> <%= data.fullname %> <% } -%>" class="form-control">
        </div>

       	<div class="form-group">
       		<input type="email" name="email" id="email" value="<% if (data != undefined) { -%> <%= data.email %> <% } -%>" placeholder="Email" class="form-control">
       	</div>

       	<div class="form-group">
       		<input type="password" name="password" id="password" placeholder="Password" class="form-control">
       	</div>

       	<div class="form-group">
       		<input type="submit" value="Register" class="btn btn-info btn-block">
       	</div>
      <form>




      <div>
        <h4>Already have an account? <a href="/users/login">Login</a></h4>
      </div>

    </div>

    </div>
</div>

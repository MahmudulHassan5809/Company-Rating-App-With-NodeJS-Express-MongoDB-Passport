<%= layout('layout2') %>

<div id="wrapper">
	<% include ../partials/sidebar %>
	<div id="page-content-wrapper">
		<div class="container-fluid main_body">
			<div class="ul_links">
	            <ul>
	                <li><a href="/">Home</a></li> |
	                 <li><a href="/company/companies">All Companies</a></li>
	                <li><a href="#">Company Profile</a></li>
	            </ul>
	        </div>

	        <div class="bodyDiv">
				<h4 style="">Rating Company</h4>
				<div class="row mainDiv">
					<div class="mx-auto">
					<span id="error"></span>
					<% include ../partials/message %>
					<form action="" method="post">
		               <input class="form-control" id="id" value="<%= company._id %>" name="id" type="hidden">
		                <div class="form-group ">
		                    <label for="">Sending Company</label>
		                    <input id="sender" class="form-control" name="sender" value="<%= user.company.name %>" type="text" style="margin-bottom:20px;">
		                </div>

		                <div class="form-group ">
		                    <label for="">Receiving Company</label>
		                    <input id="receiver" class="form-control" name="receiver" value="<%= company.name %>" type="text" style="margin-bottom:20px;">
		                </div>

		                <div class="form-group ">
		                    <label for="">Rating</label>
		                    <div class="col-sm-12" id="star_rating">
		                        <img id="1_star" src="/images/star_off.png" alt="1" title="Bad">
		                        <img id="2_star" src="/images/star_off.png" alt="2" title="Poor">
		                        <img id="3_star" src="/images/star_off.png" alt="3" title="Fair">
		                        <img id="4_star" src="/images/star_off.png" alt="4" title="Good">
		                        <img id="5_star" src="/images/star_off.png" alt="5" title="Excellent">

								<input type="hidden" name="clickedValue" id="clickedValue">
		                        <span id="showTitle"></span>
		                    </div>

		                </div>

		                <div class="form-group ">
		                    <label for="">Review</label>
		                    <textarea name="review" id="review" rows="8" cols="80" class="form-control"></textarea>
		                </div>

		                <div class="form-group">
		                    <input type="submit" id="rate" value="Create" class="form-control btn btn-primary" name="rate" style="">
		                </div>
		            </form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

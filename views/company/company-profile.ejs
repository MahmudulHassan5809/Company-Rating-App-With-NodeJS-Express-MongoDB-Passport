<% layout('layout2') %>

<div id="wrapper">

    <% include ../partials/sidebar %>

    <div id="page-content-wrapper">

        <div class="container-fluid main_body">
			<div class="ul_links">
	            <ul>
	                <li><a href="/">Home</a></li> |
	                 <li><a href="/company/companies">All Companies</a></li>
	                <li><a href="#">Company Profile</a></li>
	            </ul>
	        </div>

            <div class="bodyDiv">
				<h4 style="">Company Profile</h4>

	            <div class="row mainDiv">
					<div class="col-md-3">
						<img src="<%= company.image %>" width="270px" height="270px" alt="">
						<h3><%= company.name %></h3>
						<i class="fa fa-map-marker"> <%= company.city %>, <%= company.country %></i><br>
						<i class="fa fa-building"> <%= company.sector %></i><br>
						<i class="fa fa-external-link-alt"><a href="http://<%= company.website %>" target="_blank"> <%= company.website %>
							</a>
						</i><br><br>

						<a href="/review/company/<%= company._id %>" class="btn btn-success">Rate this company</a><br><br>

						<a href="/company/<%= company.id %>/employess" class="btn btn-info">View Company Employees</a><br><br>

						<% if (user.company.name != company.name) { -%>
							<a href="/company/register-employee/<%= company._id %>" class="btn btn-secondary">Register Me As Employee</a><br><br>
						<% } else { -%>
							<span class="lead text-dark font-weight-bold">You Are An <%= user.role %> Of <%= company.name %></span>
						<% } -%>




						<h3>Average Rating</h3>
						<h5 class="star" data-score="<%= avg %>"></h5>
						<p>Based on <%= company.ratingNumber.length %> review(s)</p>
					</div>
					<div class="col-md-9 colDiv">
						<div class="row">
							<div class="col-md-4">
								<div class="count">
									<h1>
										<%= company.ratingNumber.length %>
									</h1>
									<h2>Ratings</h2>
									<h3>Total ratings received</h3>
								</div>
							</div>

							<div class="col-md-3">
								<div class="count">
									<h1>
										<%= company.ratingSum %>
									</h1>
									<h2>Total Stars</h2>
									<h3>Total stars received</h3>
								</div>
							</div>

							<div class="col-md-4">
								<div class="count">
									<h1>
										<span class="star" data-score="<%= avg %>"></span>
									</h1>
									<h2>Average Rating (<%= avg %>)</h2>
									<h3>Based on 5 reviews</h3>
								</div>
							</div><br><br>

							<div class="col-md-12 header mt-3">
								<h2>Reviews (<%= company.ratingNumber.length %>)</h2>

								<div class="linkDiv">
									<a href="/review/company/<%= company._id %>" class="btn btn-success">
										Write Review</a>
								</div>
							</div>

							<% if (company.companyRatings.length > 0) { -%>
							<% company.companyRatings.forEach( function(val, index) { -%>
							<div class="col-md-12 reviewDiv">
								<div class="row">
									<div class="col-md-2">
									    <img src="<%= val.companyImage %>" width="100px" class="ml-2" height="100px">
									</div>

									<div class="col-md-8 mb-2">
									    <h1>
									        <a href="#"><%= val.companyName %></a> |
									        <%= val.userFullName %>
										</h1>
									    <h2><%= val.userRole %></h2>
									    <p><%= val.userReview %></p>
									</div>

									<div class="col-md-2" style="width:150px">
									    <h1>Rating</h1>
									    <span class="star" data-score="<%= val.userRating %>"></span>
									</div>
								</div>
							</div>
							<%  }); -%>
							<% } else { -%>

							<% } -%>

						</div>
					</div>

				</div>
            </div>
        </div>
    </div>

</div>
